<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Background con bordi arrotondati -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#FFFFFF" /> <!-- Colore di sfondo -->
            <corners android:radius="8dp" /> <!-- Radius dei bordi -->
        </shape>
    </item>
    <!-- Ombra sotto il background -->
    <item android:right="1dp" android:left="1dp" android:bottom="3dp">
        <shape android:shape="rectangle">
            <solid android:color="#99000000" /> <!-- Colore dell'ombra -->
            <corners android:radius="8dp" /> <!-- Radius dei bordi -->
        </shape>
    </item>
</layer-list>
