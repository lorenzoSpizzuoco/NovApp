<!-- rounded_background.xml -->
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@color/cardview_light_background" /> <!-- Colore di sfondo -->
            <corners android:radius="8dp" /> <!-- Radius dei bordi -->
        </shape>
    </item>
    <item android:top="0.5dp" android:right="0.5dp" android:left="0.5dp" android:bottom="2dp">
        <shape android:shape="rectangle">
            <solid android:color="?attr/colorSurfaceContainerLow" /> <!-- Colore dell'ombra -->
            <corners android:radius="8dp" /> <!-- Radius dei bordi -->
        </shape>
    </item>
</layer-list>