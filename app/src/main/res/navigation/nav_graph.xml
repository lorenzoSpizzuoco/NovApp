<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_flow_nav_graph"
    app:startDestination="@id/startScreenFragment">


    <!-- Start screen -->
    <fragment
        android:id="@+id/startScreenFragment"
        android:name="com.example.novapp2.ui.start.StartScreenFragment"
        android:label="fragment_start_screen"
        tools:layout="@layout/fragment_start_screen" >
        <action
            android:id="@+id/action_start_to_onboarding"
            app:destination="@id/onboardingFragment" />
    </fragment>

    <!-- Starting carousel -->

    <!-- Login -->
    <fragment
        android:id="@+id/loginFragment"
        android:name="com.example.novapp2.ui.login.LoginFragment"
        android:label="fragment_login"
        tools:layout="@layout/fragment_login" >
        <action
            android:id="@+id/action_login_to_register"
            app:destination="@id/registerFragment" />
        <action
            android:id="@+id/action_login_to_home"
            app:destination="@id/homeFragment" />
    </fragment>

    <!-- Register -->
    <fragment
        android:id="@+id/registerFragment"
        android:name="com.example.novapp2.ui.register.RegisterFragment"
        android:label="fragment_register"
        tools:layout="@layout/fragment_register" >
        <action
            android:id="@+id/action_register_to_login"
            app:destination="@id/loginFragment" />
        <action
            android:id="@+id/action_register_to_home"
            app:destination="@id/homeFragment" />
    </fragment>

    <!-- Home -->
    <fragment
        android:id="@+id/homeFragment"
        android:name="com.example.novapp2.ui.home.HomeFragment"
        android:label="fragment_home"
        tools:layout="@layout/fragment_home" >
        <action
            android:id="@+id/action_home_to_fullRegister"
            app:destination="@id/fullRegisterFragment" />
        <action
            android:id="@+id/action_home_to_login"
            app:destination="@id/loginFragment" />
    </fragment>

    <!-- Onboarding -->
    <fragment
        android:id="@+id/onboardingFragment"
        android:name="com.example.novapp2.ui.onboarding.ViewPagerFragment"
        android:label="fragment_view_pager"
        tools:layout="@layout/fragment_view_pager" >
        <action
            android:id="@+id/action_onboarding_to_login"
            app:destination="@id/loginFragment" />
    </fragment>

    <!-- Full register -->
    <fragment
        android:id="@+id/fullRegisterFragment"
        android:name="com.example.novapp2.ui.register.FullRegisterFragment"
        android:label="fragment_full_register"
        tools:layout="@layout/fragment_full_register" >
        <argument
            android:name="userId"
            app:argType="string" />
        <argument
            android:name="userEmail"
            app:argType="string" />
        <action
            android:id="@+id/action_fullRegister_to_home"
            app:destination="@id/homeFragment" />
    </fragment>

</navigation>