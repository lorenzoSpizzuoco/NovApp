<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_nav_graph"
    app:startDestination="@id/loginFragment">
    <fragment
        android:id="@+id/loginFragment"
        android:name="com.example.novapp2.ui.login.LoginFragment"
        android:label="fragment_login"
        tools:layout="@layout/fragment_login" >
        <action
            android:id="@+id/action_loginFragment_to_registerFragment"
            app:destination="@id/registerFragment" />
        <action
            android:id="@+id/action_loginFragment_to_mainActivity2"
            app:destination="@id/mainActivity2" />
    </fragment>
    <fragment
        android:id="@+id/registerFragment"
        android:name="com.example.novapp2.ui.register.RegisterFragment"
        android:label="RegisterFragment" >
        <action
            android:id="@+id/action_registerFragment_to_mainActivity2"
            app:destination="@id/mainActivity2" />
    </fragment>
    <activity
        android:id="@+id/mainActivity2"
        android:name="com.example.novapp2.MainActivity"
        android:label="activity_main"
        tools:layout="@layout/activity_main" />
    <activity
        android:id="@+id/activityNotification"
        android:name="com.example.novapp2.ui.mockup.ActivityNotification"
        android:label="activity_notification"
        tools:layout="@layout/activity_notification" />
    <activity
        android:id="@+id/activityUser"
        android:name="com.example.novapp2.ui.mockup.ActivityUser"
        android:label="activity_user"
        tools:layout="@layout/activity_user" />
    <activity
        android:id="@+id/activityChat"
        android:name="com.example.novapp2.ui.mockup.ActivityChat"
        android:label="activity_chat"
        tools:layout="@layout/to_delete_chat" />
</navigation>