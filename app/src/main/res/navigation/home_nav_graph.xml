<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/navigation_dashboard">

    <fragment
        android:id="@+id/navigation_chat"
        android:name="com.example.novapp2.ui.home.chat.ChatFragment"
        android:label="fragment_chat"
        tools:layout="@layout/fragment_chat">
        <argument
            android:name="chatGroupId"
            app:argType="string" />
        <action
            android:id="@+id/action_navigation_chat_to_openChat"
            app:destination="@id/openChatFragment"
            app:enterAnim="@anim/fade_in_fast" />
    </fragment>

    <fragment
        android:id="@+id/navigation_add"
        android:name="com.example.novapp2.ui.home.add.AddFragment"
        android:label="fragment_add"
        tools:layout="@layout/fragment_add" >
        <action
            android:id="@+id/action_navigation_add_to_loadingFragment"
            app:destination="@id/loadingFragment"
            app:enterAnim="@anim/fade_in" />
    </fragment>

    <fragment
        android:id="@+id/navigation_notifications"
        android:name="com.example.novapp2.ui.home.notifications.NotificationsFragment"
        android:label="fragment_notifications"
        tools:layout="@layout/fragment_notifications" />

    <fragment
        android:id="@+id/navigation_profile"
        android:name="com.example.novapp2.ui.home.user.UserFragment"
        android:label="fragment_user"
        tools:layout="@layout/fragment_user" >
        <action
            android:id="@+id/action_navigation_profile_to_postDetailsFragmentFragment"
            app:destination="@id/postDetailsFragmentFragment"
            app:enterAnim="@anim/fade_in" />
    </fragment>

    <fragment
        android:id="@+id/loadingFragment"
        android:name="com.example.novapp2.ui.home.add.LoadingFragment"
        android:label="fragment_loading"
        tools:layout="@layout/fragment_loading" >
        <action
            android:id="@+id/action_loadingFragment_to_navigation_dashboard"
            app:destination="@id/navigation_dashboard"
            app:enterAnim="@anim/fade_in" />
    </fragment>

    <fragment
        android:id="@+id/navigation_dashboard"
        android:name="com.example.novapp2.ui.home.dashboard.DashboardFragment"
        android:label="fragment_dashboard"
        tools:layout="@layout/fragment_dashboard">
        <action
            android:id="@+id/action_navigation_dashboard_to_postDetailsFragment"
            app:destination="@id/postDetailsFragmentFragment"
            app:enterAnim="@anim/nav_default_enter_anim" />
    </fragment>

    <fragment
        android:id="@+id/postDetailsFragmentFragment"
        android:name="com.example.novapp2.ui.home.dashboard.PostDetailsFragment"
        android:label="fragment_post_details_fragment"
        tools:layout="@layout/fragment_post_details" >
        <argument
            android:name="post"
            app:argType="com.example.novapp2.entity.post.Post" />
    </fragment>

    <fragment
        android:id="@+id/openChatFragment"
        android:name="com.example.novapp2.ui.home.chat.OpenChatFragment"
        android:label="fragment_open_chat"
        tools:layout="@layout/fragment_open_chat" >
        <action
            android:id="@+id/action_openChat_to_navigationChat"
            app:destination="@id/navigation_chat"
            app:enterAnim="@anim/fade_in_fast" />
    </fragment>

</navigation>