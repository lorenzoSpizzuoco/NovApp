<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/navigation_dashboard">

    <fragment
        android:id="@+id/navigation_chat"
        android:name="com.example.novapp2.ui.home.chat.ChatFragment"
        android:label="fragment_chat"
        tools:layout="@layout/fragment_chat"/>

    <fragment
        android:id="@+id/navigation_add"
        android:name="com.example.novapp2.entity.add.AddFragment"
        android:label="fragment_add"
        tools:layout="@layout/fragment_add" >
        <action
            android:id="@+id/action_navigation_add_to_loadingFragment"
            app:destination="@id/loadingFragment" />
    </fragment>

    <fragment
        android:id="@+id/navigation_notifications"
        android:name="com.example.novapp2.ui.home.notifications.NotificationsFragment"
        android:label="fragment_notifications"
        tools:layout="@layout/fragment_notifications" />

    <fragment
        android:id="@+id/navigation_profile"
        android:name="com.example.novapp2.ui.home.user.UserFragment"
        android:label="fragment_user"
        tools:layout="@layout/fragment_user" >
        <action
            android:id="@+id/action_navigation_profile_to_postDetailsFragmentFragment"
            app:destination="@id/postDetailsFragmentFragment" />
    </fragment>

    <fragment
        android:id="@+id/adDetailsFragment"
        android:name="com.example.novapp2.ui.home.feed.AdDetailsFragment"
        android:label="adDetailsFragment"
        tools:layout="@layout/ad_details_fragment">


        <argument
            android:name="AdObject"
            app:argType="com.example.novapp2.entity.ad.Ad" />
    </fragment>

    <fragment
        android:id="@+id/newAdFragment"
        android:name="com.example.novapp2.ui.home.feed.NewAdFragment"
        android:label="fragment_new_ad"
        tools:layout="@layout/fragment_new_ad" >
        <action
            android:id="@+id/action_newAdFragment_to_loadingFragment"
            app:destination="@id/loadingFragment" />
    </fragment>

    <fragment
        android:id="@+id/loadingFragment"
        android:name="com.example.novapp2.ui.LoadingFragment"
        android:label="fragment_loading"
        tools:layout="@layout/fragment_loading" >
        <action
            android:id="@+id/action_loadingFragment_to_navigation_dashboard"
            app:destination="@id/navigation_dashboard" />
    </fragment>

    <fragment
        android:id="@+id/navigation_home"
        android:name="com.example.novapp2.ui.home.feed.FeedFragment"
        android:label="fragment_feed"
        tools:layout="@layout/fragment_feed" >
        <action
            android:id="@+id/action_navigation_home_to_adDetailsFragment"
            app:destination="@id/adDetailsFragment" />
        <action
            android:id="@+id/action_navigation_home_to_newAdFragment"
            app:destination="@id/newAdFragment" />
    </fragment>

    <fragment
        android:id="@+id/navigation_dashboard"
        android:name="com.example.novapp2.ui.dashboard.DashboardFragment"
        android:label="fragment_dashboard"
        tools:layout="@layout/fragment_dashboard">
        <action
            android:id="@+id/action_navigation_dashboard_to_postDetailsFragment"
            app:destination="@id/postDetailsFragmentFragment"
            app:enterAnim="@anim/nav_default_enter_anim" />
    </fragment>

    <fragment
        android:id="@+id/postDetailsFragmentFragment"
        android:name="com.example.novapp2.ui.dashboard.PostDetailsFragment"
        android:label="fragment_post_details_fragment"
        tools:layout="@layout/fragment_post_details" >
        <argument
            android:name="post"
            app:argType="com.example.novapp2.entity.post.Post" />
    </fragment>

    <fragment
        android:id="@+id/openChatFragment"
        android:name="com.example.novapp2.ui.home.chat.OpenChatFragment"
        android:label="fragment_open_chat"
        tools:layout="@layout/fragment_open_chat" />

</navigation>