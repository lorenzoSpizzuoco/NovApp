<?xml version="1.0" encoding="utf-8"?>

<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.dashboard.PostDetailsFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
          android:id="@+id/PostdetailsImageView"
          android:layout_width="match_parent"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
          android:layout_height="400dp"/>




        <RelativeLayout
            android:background="@drawable/post_details_background"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:elevation="10dp"
            android:padding="30dp"
            android:layout_marginTop="350dp">

            <com.google.android.material.chip.Chip
                android:id="@+id/postDetailChip"
                android:layout_width="wrap_content"

                android:layout_height="wrap_content"
                android:clickable="false"
                android:text="qualcosa"
                android:textAllCaps="true"
                app:chipCornerRadius="3dp"
                app:chipStartPadding="8dp"
                app:chipEndPadding="8dp"

                android:textSize="16sp"
                android:textStyle="bold"
                app:chipMinHeight="20dp"
                app:chipStrokeWidth="0dp" />
            <TextView
                android:layout_below="@id/postDetailChip"
                android:layout_marginTop="8dp"
                android:id="@+id/postTitle"
                android:layout_width="332dp"
                android:layout_height="wrap_content"
                android:padding="8dp"
                android:text="title"
                android:textSize="32sp"
                android:textStyle="bold" />

            <com.google.android.material.divider.MaterialDivider
                android:layout_width="match_parent"
                android:layout_below="@id/postInfosBlock"

                android:layout_height="1px"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_below="@id/postTitle"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:id="@+id/post_author_layout"
                android:layout_height="wrap_content">


                    <com.google.android.material.imageview.ShapeableImageView
                        app:shapeAppearanceOverlay="@style/Circular"
                        android:id="@+id/post_user_image"
                        android:layout_width="90dp"
                        android:layout_height="90dp"
                        android:contentDescription="bla bla"

                        android:scaleType="centerCrop"
                        android:src="@drawable/analisi" />

                    <TextView
                        android:id="@+id/user_name_post"
                        android:textStyle="bold"
                        android:layout_marginTop="30dp"
                        android:layout_marginLeft="10dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="20dp"
                        android:textAlignment="center" />
            </LinearLayout>

            <LinearLayout
                    android:layout_marginTop="10dp"
                    android:id="@+id/postInfosBlock"
                    android:layout_below="@id/post_author_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="20dp"
                    android:padding="8dp">
                    <TextView
                        android:layout_marginRight="12dp"
                        android:text="place"
                        android:textStyle="bold"
                        android:id="@+id/postPlace"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"

                        android:textSize="20sp" />
                    <TextView
                        android:id="@+id/postDate"
                        android:layout_width="0dp"
                        android:text="data"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.2"
                        android:textSize="20sp" />



                </LinearLayout>

                <TextView
                    android:layout_below="@id/postInfosBlock"
                    android:paddingLeft="8dp"
                    android:paddingTop="20dp"
                    android:text="descrizione"
                    android:id="@+id/postDescription"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

                    android:textSize="16sp" />



        </RelativeLayout>

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/imageview_favorite_post"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_gravity="end|bottom"
            android:layout_marginVertical="280dp"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="20dp"

            android:layout_marginBottom="16dp"
            android:elevation="20dp"
            android:src="@drawable/baseline_favorite_border_24" />


    </RelativeLayout>
</FrameLayout>
