<?xml version="1.0" encoding="utf-8"?>

<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
   xmlns:tools="http://schemas.android.com/tools"
   android:layout_width="match_parent"
   android:layout_height="match_parent"
   tools:context=".ui.dashboard.PostDetailsFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
          android:id="@+id/PostdetailsImageView"
          android:layout_width="match_parent"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
          android:layout_height="400dp"/>

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/imageview_favorite_post"
            android:layout_alignParentEnd="true"
            android:layout_marginVertical="320dp"
            android:backgroundTint="@color/main_blue"
            android:outlineAmbientShadowColor="@color/background_gray"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end|bottom"

            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="16dp"
            android:layout_marginBottom="16dp"
            android:src="@drawable/baseline_favorite_border_24" />


        <RelativeLayout
            android:background="@drawable/post_details_background"
            android:backgroundTint="@color/white"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="30dp"
            android:layout_marginTop="350dp">


            <TextView
                android:id="@+id/postTitle"
                android:layout_width="332dp"
                android:layout_height="wrap_content"

                android:padding="8dp"
                android:text="title"
                android:textSize="32sp"
                android:textStyle="bold" />

            <com.google.android.material.divider.MaterialDivider
                android:layout_width="match_parent"
                android:layout_below="@id/postInfosBlock"

                android:layout_height="1px"/>


            <LinearLayout
                    android:id="@+id/postInfosBlock"
                    android:layout_below="@id/postTitle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="20dp"
                    android:padding="8dp">
                    <TextView
                        android:layout_marginRight="12dp"
                        android:text="place"
                        android:textStyle="bold"
                        android:textColor="@color/main_grey"
                        android:id="@+id/postPlace"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"

                        android:textSize="20sp" />
                    <TextView
                        android:id="@+id/postDate"
                        android:layout_width="0dp"
                        android:text="data"
                        android:textColor="@color/main_grey"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.2"
                        android:textSize="20sp" />



                </LinearLayout>

                <TextView
                    android:layout_below="@id/postInfosBlock"
                    android:paddingLeft="8dp"
                    android:paddingTop="20dp"
                    android:text="descrizione"
                    android:id="@+id/postDescription"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

                    android:textSize="16sp" />

        </RelativeLayout>


    </RelativeLayout>
</FrameLayout>
