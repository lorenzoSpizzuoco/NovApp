<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.dashboard.DashboardFragment"
    android:background="@color/background_white"
    >


    <androidx.appcompat.widget.SearchView
        android:id="@+id/courseSearchView"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_margin="8dp"
        android:background="@drawable/course_search_view_bg"
        app:goIcon="?android:attr/actionModeWebSearchDrawable"
        app:iconifiedByDefault="false"
        app:layout_constraintBaseline_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.027"
        app:queryHint="Search ..."
        android:textColor="#000000"
        app:searchIcon="@drawable/baseline_search_24" />


    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/courseView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="@color/background_white"
        android:paddingLeft="10dp"
        android:paddingTop="0dp"
        android:paddingRight="10dp"
        android:paddingBottom="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/horizontalScrollView"
        app:layout_constraintVertical_bias="0.469"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="0dp" />

    <HorizontalScrollView
        android:id="@+id/horizontalScrollView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/courseSearchView">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:orientation="horizontal"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            app:layout_constraintTop_toBottomOf="@+id/courseSearchView">



            <Button
                android:id="@+id/button_event"
                style="@style/Widget.Material3.Button.Icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="5dp"
                android:layout_weight="1"
                android:text="@string/button_event"
                android:textColor="@color/white"
                android:textSize="14sp"
                app:backgroundTint="@color/main_blue"
                app:icon="@drawable/btn_3"
                app:iconTint="@color/white" />

            <Button
                android:id="@+id/button_ui"
                style="@style/Widget.Material3.Button.Icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="5dp"
                android:layout_weight="1"
                android:text="@string/button_info"
                android:textColor="@color/white"
                android:textSize="14sp"
                app:backgroundTint="@color/main_blue"
                app:icon="@drawable/btn_1"
                app:iconTint="@color/white" />

            <Button
                android:id="@+id/button_gs"
                style="@style/Widget.Material3.Button.Icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="5dp"
                android:layout_weight="1"
                android:text="@string/button_sg"
                android:textColor="@color/white"
                android:textSize="14sp"
                app:backgroundTint="@color/main_blue"
                app:icon="@drawable/btn_2"
                app:iconTint="@color/white" />
            <Button
                android:id="@+id/button_ripetizioni"
                style="@style/Widget.Material3.Button.Icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="5dp"
                android:layout_weight="1"
                android:text="@string/button_ripetizioni"
                android:textColor="@color/white"
                android:textSize="14sp"
                app:backgroundTint="@color/main_blue"
                app:icon="@drawable/btn_3"
                app:iconTint="@color/white" />
            <Button
                android:id="@+id/button_other"
                style="@style/Widget.Material3.Button.Icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/button_other"
                android:textColor="@color/white"
                android:textSize="14sp"
                app:backgroundTint="@color/main_blue"
                app:icon="@drawable/btn_4"
                app:iconTint="@color/white" />
        </LinearLayout>
    </HorizontalScrollView>


</androidx.constraintlayout.widget.ConstraintLayout>